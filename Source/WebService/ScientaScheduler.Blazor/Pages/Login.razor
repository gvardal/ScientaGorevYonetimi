@page "/login"
@layout EmptyLayout
@inject HttpClient httpClient
@inject NavigationManager navigationManager

<h3>Login Page</h3>

<div class="container-fluid">
    <div class="row justify-contenct-center align-items-center h-100">
        <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
            <EditForm Model="@userLoginRequest" OnValidSubmit="UserLogin">
                <DataAnnotationsValidator/>
                <div class="form-group">
                  <label for="" class="form-label">Name</label>
                  <input type="text" name="" id="" class="form-control" placeholder="" aria-describedby="helpId" @bind-value="userLoginRequest.Email">
                  <small id="helpId" class="text-muted">Help text</small>
                </div>
            </EditForm>
        </div>
    </div>
</div>


@code {


    private UserLoginRequestDTO userLoginRequest = new UserLoginRequestDTO();

    private async Task UserLogin()
    {
        var httpReqRes = await httpClient.PostAsJsonAsync("api/user/Login", userLoginRequest);
        if (httpReqRes.IsSuccessStatusCode)
        {
            var res = await httpReqRes.Content.ReadFromJsonAsync<UserLoginResponseDTO>();
        }
    }
}